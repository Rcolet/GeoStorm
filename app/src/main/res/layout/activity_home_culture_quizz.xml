<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeCultureQuizzActivity">

    <Button
        android:id="@+id/startCultureQuizz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Start Game"
        android:onClick="startGameCultureQuizz"/>

    <Button
        android:id="@+id/scoreCultureQuizz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="High score"
        android:onClick="highScoreCultureQuizz"/>

    <Button
        android:id="@+id/exitCultureQuizz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Exit" />
</LinearLayout>